{
  "compilerOptions": {
    "lib": ["DOM", "ES2017"],
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
