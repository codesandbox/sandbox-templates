  <script>
    // Dark/Light Mode Toggle
    function toggleMode() {
      const body = document.body;
      body.classList.toggle('light');
    }

    // Output handling
    function display(id, content) {
      document.getElementById(id).innerHTML = content;
    }

    // ----------------------------
    // üåê REAL AI API INTEGRATION
    // ----------------------------

    // 1Ô∏è‚É£ OPENAI IMAGE / AUDIO / CHAT
    async function openAIRequest(endpoint, body) {
      const res = await fetch(endpoint, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": "Bearer YOUR_OPENAI_API_KEY"
        },
        body: JSON.stringify(body)
      });
      return await res.json();
    }

    // 2Ô∏è‚É£ STABILITY AI ‚Äì IMAGE GENERATION
    async function stabilityImage(prompt) {
      const res = await fetch("https://api.stability.ai/v2beta/stable-image/generate/", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Accept": "application/json",
          "Authorization": "Bearer YOUR_STABILITY_API_KEY"
        },
        body: JSON.stringify({ prompt })
      });
      return await res.json();
    }

    // 3Ô∏è‚É£ HUGGINGFACE FREE MODELS
    async function huggingFace(model, inputs) {
      const res = await fetch(`https://api-inference.huggingface.co/models/${model}`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": "Bearer YOUR_HF_TOKEN"
        },
        body: JSON.stringify({ inputs })
      });
      return await res.json();
    }

    // ----------------------------
    // AI TOOL FUNCTIONS
    // ----------------------------

    async function generateImage() {
      display("image-output", "‚è≥ Generating image...");

      const prompt = document.querySelector('#image input').value;

      // OpenAI Example
      const data = await openAIRequest("https://api.openai.com/v1/images/generations", {
        model: "gpt-image-1",
        prompt: prompt
      });

      if (data?.data?.[0]?.url) {
        display("image-output", `<img src='${data.data[0].url}' style='width:300px;border-radius:10px;'>`);
        return;
      }

      // Stability fallback
      const stable = await stabilityImage(prompt);
      if (stable?.image) display("image-output", `<img src='${stable.image}' style='width:300px;border-radius:10px;'>`);
    }

    async function generateAudio() {
      display("audio-output", "‚è≥ Generating audio...");

      const text = document.querySelector('#audio input').value;

      const data = await openAIRequest("https://api.openai.com/v1/audio/speech", {
        model: "gpt-4o-mini-tts",
        input: text
      });

      if (data?.audio) display("audio-output", "Audio ready (base64)");
    }

    async function generateVideo() {
      display("video-output", "‚è≥ Generating video...");

      const prompt = document.querySelector('#video input').value;

      const result = await huggingFace("damo-vilab/text-to-video-ms-1.7b", prompt);

      if (result?.video) display("video-output", `<video controls width='300'><source src='data:video/mp4;base64,${result.video}'></video>`);
    }

    async function sendChat() {
      display("chat-output", "‚è≥ Generating reply...");

      const text = document.querySelector('#chat textarea').value;

      const data = await openAIRequest("https://api.openai.com/v1/chat/completions", {
        model: "gpt-4o-mini",
        messages: [{ role: "user", content: text }]
      });

      display("chat-output", `<p>${data.choices[0].message.content}</p>`);
    } (Future Integration)
    async function generateImage() {
      alert('Image API integration coming soon!');
    }

    async function generateAudio() {
      alert('Audio API integration coming soon!');
    }

    async function generateVideo() {
      alert('Video API integration coming soon!');
    }

    async function sendChat() {
      alert('Chat API integration coming soon!');
    }
  </script>
